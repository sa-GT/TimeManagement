                    <div class="input-group">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" type="email" placeholder="Email Address" class="form-control dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                        <span asp-validation-for="Email" class="text-danger text-sm"></span>
                    </div>

                    <div class="input-group">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" type="password" placeholder="Password" class="form-control dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                        <span asp-validation-for="Password" class="text-danger text-sm"></span>
                    </div>

                 

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-red-600 bg-red-100 border border-red-300 p-2 rounded">
                            @ViewBag.Error
                        </div>
                    }

                    <div>
                        <button type="submit" class="w-full relative overflow-hidden px-6 py-3 rounded-lg font-bold bg-gradient-to-r from-primary to-purple-600 text-white hover:shadow-lg hover:shadow-purple-500/30 transition group">
                            <span class="relative z-10">Sign In</span>
                            <span class="absolute inset-0 bg-gradient-to-r from-purple-600 to-primary opacity-0 group-hover:opacity-100 transition duration-300"></span>
                        </button>
                    </div>
                </form>


                <div class="mt-8 text-center">
                    <p class="text-gray-600 dark:text-gray-300 text-sm">
                        Don't have an account?
                        <a href="#" class="font-medium text-primary hover:text-purple-600 dark:text-secondary dark:hover:text-green-500"
                           onclick="event.preventDefault(); navigateTo('register')">
                            Request access
                        </a>
                    </p>
                </div>

                <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <div class="flex justify-center space-x-6">
                        <a href="#" class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center hover:bg-gray-200 dark:hover:bg-gray-700 transition">
                            <i class="fab fa-google text-red-500"></i>
                        </a>
                        <a href="#" class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center hover:bg-gray-200 dark:hover:bg-gray-700 transition">
                            <i class="fab fa-microsoft text-blue-500"></i>
                        </a>
                        <a href="#" class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center hover:bg-gray-200 dark:hover:bg-gray-700 transition">
                            <i class="fab fa-apple text-gray-800 dark:text-white"></i>
                        </a>
                    </div>
                </div>

                <div class="lg:hidden mt-8 text-center">
                    <p class="text-sm text-gray-500 dark:text-gray-400">© 2023 EliteStaff. All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Navigation functions
        function navigateTo(page) {
            // In a real application, this would route to the appropriate page
            console.log(`Navigating to ${page}`);
            // You would implement actual routing logic here
        }

        // Form submission
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const rememberMe = document.getElementById('remember-me').checked;

            // Here you would typically send this data to your authentication API
            console.log('Login attempt with:', { email, password, rememberMe });

            // For demo purposes, we'll simulate a successful login
            setTimeout(() => {
                alert('Login successful! Redirecting to dashboard...');
                navigateTo('dashboard');
            }, 1000);
        });

        // Theme toggle
        function setupThemeToggle() {
            // Check for saved theme preference or use system preference
            if (localStorage.getItem('color-theme') === 'dark' ||
                (!localStorage.getItem('color-theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            setupThemeToggle();

            // Prevent default behavior for all links
            document.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', e => e.preventDefault());
            });
        });
    </script>
</body>
</html>