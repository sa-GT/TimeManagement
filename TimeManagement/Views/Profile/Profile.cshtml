@model TimeManagement.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 mb-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-body text-center p-4">

            <h2 class="mb-4 fw-bold">👤 My Profile</h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.CurrentImagePath))
            {
                <img src="@Model.CurrentImagePath" width="130" height="130" class="rounded-circle shadow mb-3" />
            }

            <table class="table table-hover table-bordered mt-4 w-75 mx-auto">
                <tbody>
                    <tr>
                        <th class="bg-light">First Name</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Last Name</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Phone</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Department</th>
                        <td>@Model.Department</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Position</th>
                        <td>@Model.Position</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Language</th>
                        <td>@Model.LanguagePreference</td>
                    </tr>
                </tbody>
            </table>

            <a href="/Profile/UpdateProfile" class="btn btn-outline-primary mt-3 px-4">
                ✏️ Edit Profile
            </a>
        </div>
    </div>
</div>
